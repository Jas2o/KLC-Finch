<UserControl
    x:Class="KLC_Finch.controlDashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="clr-namespace:KLC_Finch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock
                x:Name="txtRCNotify"
                Margin="0,0,0,5"
                Text="Remote control notify policy here."
                TextAlignment="Center" />
            <TextBlock
                x:Name="txtSpecialInstructions"
                Margin="0,0,0,5"
                FontWeight="Bold"
                Text="Special Instructions for this Machine"
                TextAlignment="Center" />
            <TextBlock
                x:Name="txtMachineNote"
                Margin="0,0,0,5"
                TextAlignment="Center"
                TextWrapping="Wrap">
                <TextBlock.Inlines>
                    <Run x:Name="txtMachineNoteText" Text="Machine Note Here" />
                    <Hyperlink x:Name="txtMachineNoteLink" RequestNavigate="txtMachineNoteLink_RequestNavigate">
                        <TextBlock x:Name="txtMachineNoteLinkText" Text="https://www.example.com" />
                    </Hyperlink>
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>

        <Label
            x:Name="lblStaticImage"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Static Image not started."
            ToolTip="Check settings that modules are set to auto start." />
        <Image
            x:Name="imgScreenPreview"
            Grid.Row="1"
            StretchDirection="DownOnly" />

        <StackPanel
            Grid.Row="2"
            Margin="0,5,0,0"
            Orientation="Horizontal">
            <Button
                x:Name="btnStaticImageStart"
                Margin="0,0,5,0"
                Click="btnStaticImageStart_Click"
                Content="StartStaticImage" />
            <Button
                x:Name="btnStaticImageRefresh"
                Margin="0,0,5,0"
                Click="btnStaticImageRefresh_Click"
                Content="Refresh" />
            <Button
                x:Name="btnStaticImageRefreshFull"
                Margin="0,0,5,0"
                Click="btnStaticImageRefreshFull_Click"
                Content="Get native" />
            <Button
                x:Name="btnStaticImageDumpLayout"
                Margin="0,0,5,0"
                Click="btnStaticImageDumpLayout_Click"
                Content="Screen layout to clipboard" />
        </StackPanel>

        <GridSplitter
            Grid.RowSpan="3"
            Grid.Column="1"
            HorizontalAlignment="Stretch" />

        <ScrollViewer
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="5,0,0,0"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <TextBlock
                        x:Name="txtRebootLast"
                        Grid.Row="0"
                        Margin="0,0,0,5"
                        Text="Last rebooted (fuzzy time) ago"
                        TextAlignment="Center" />
                    <Grid
                        Height="20"
                        Margin="0,0,0,5"
                        VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="0,2"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="btnDashboardGetCpuRam_Click"
                            Content="CPU"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                        <ProgressBar
                            x:Name="progressCPU"
                            Grid.Column="1"
                            Height="5"
                            VerticalAlignment="Bottom"
                            Maximum="100"
                            Minimum="0"
                            Value="0" />
                        <TextBlock
                            Name="txtUtilisationCPU"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="-" />
                    </Grid>
                    <Grid
                        Height="20"
                        Margin="0,0,0,5"
                        VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="0,2"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="btnDashboardGetCpuRam_Click"
                            Content="RAM"
                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" />
                        <ProgressBar
                            x:Name="progressRAM"
                            Grid.Column="1"
                            Height="5"
                            VerticalAlignment="Bottom"
                            Maximum="100"
                            Minimum="0"
                            Value="0" />
                        <TextBlock
                            Name="txtUtilisationRAM"
                            Grid.Column="1"
                            Margin="0,0,0,5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="-" />
                    </Grid>
                </StackPanel>
                <Expander
                    Grid.Row="1"
                    Header="Volumes"
                    IsExpanded="True">
                    <StackPanel x:Name="stackDisks">
                        <!--<command:controlDisk/>-->
                    </StackPanel>
                </Expander>
                <Expander Grid.Row="2" Header="Misc">
                    <TextBox
                        x:Name="txtDashboard"
                        Margin="0"
                        Background="DarkSlateBlue"
                        FontFamily="Consolas"
                        Foreground="White"
                        IsReadOnly="true"
                        TextWrapping="Wrap" />
                </Expander>
            </Grid>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Grid.Column="2"
            Margin="0,5,0,0"
            Orientation="Horizontal">
            <Button
                x:Name="btnDashboardStartData"
                Margin="5,0"
                Click="btnDashboardStartData_Click"
                Content="Start Data" />
            <Button
                x:Name="btnDashboardGetCpuRam"
                Margin="0,0,5,0"
                Click="btnDashboardGetCpuRam_Click"
                Content="CPU/RAM" />
            <Button
                x:Name="btnDashboardGetVolumes"
                Margin="0,0,5,0"
                Click="btnDashboardGetVolumes_Click"
                Content="Volumes" />
        </StackPanel>
    </Grid>
</UserControl>
