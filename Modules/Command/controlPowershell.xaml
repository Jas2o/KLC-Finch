<UserControl
    x:Class="KLC_Finch.controlPowershell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="btnCommandStart"
                Width="75"
                Margin="0,0,5,0"
                Click="btnCommandStart_Click"
                Content="Start" />
            <Button
                x:Name="btnCommandKill"
                Width="85"
                Margin="0,0,5,0"
                Click="btnCommandKill_Click"
                Content="KillCommand" />
            <!--<Button x:Name="btnCommandClear" Content="Clear" Width="75" Margin="0,0,5,0" Click="btnCommandClear_Click" />-->
            <Label
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Content="Scrollback:" />
            <Button
                x:Name="btnCommandScrollback"
                Width="75"
                Margin="0,0,5,0"
                Click="btnCommandScrollback_Click"
                Content="Little (Fast)" />
            <Button
                x:Name="btnCommandScrollbackSlow"
                Width="75"
                Margin="0,0,5,0"
                Click="btnCommandScrollbackSlow_Click"
                Content="Far (Slow)" />
            <CheckBox
                x:Name="chkAllowColour"
                VerticalAlignment="Center"
                Content="Allow Colour" />
        </StackPanel>

        <TextBox
            x:Name="txtCommand"
            Grid.Row="1"
            Margin="0,5,0,0"
            Background="MidnightBlue"
            FontFamily="Consolas"
            Foreground="White"
            IsReadOnly="true"
            VerticalScrollBarVisibility="Auto" />
        <RichTextBox
            x:Name="richCommand"
            Grid.Row="1"
            Margin="0,5,0,0"
            Background="MidnightBlue"
            FontFamily="Consolas"
            Foreground="White"
            IsReadOnly="true"
            VerticalScrollBarVisibility="Auto">
            <RichTextBox.Resources>
                <Style TargetType="{x:Type Paragraph}">
                    <Setter Property="Margin" Value="0" />
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>

        <Grid Grid.Row="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="txtCommandInput"
                AcceptsReturn="true"
                PreviewKeyDown="txtCommandInput_PreviewKeyDown"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <Button
                x:Name="btnCommandLineMode"
                Grid.Column="1"
                Width="75"
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnCommandLineMode_Click"
                Content="Line Mode"
                IsEnabled="False" />
        </Grid>
    </Grid>
</UserControl>
